<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.axonivy.connector.mattermost</groupId>
  <name>mattermost-connector</name>
  <artifactId>mattermost-connector-modules</artifactId>
  <version>10.0.22-SNAPSHOT</version>
  <packaging>pom</packaging>

  <modules>
    <module>mattermost-connector</module>
    <module>mattermost-connector-notification</module>
    <module>mattermost-connector-demo</module>
    <module>mattermost-connector-test</module>
    <module>mattermost-connector-product</module>
  </modules>

  <scm>
    <developerConnection>scm:git:https://github.com/axonivy-market/mattermost-connector.git</developerConnection>
    <tag>HEAD</tag>
  </scm>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <artifactId>maven-deploy-plugin</artifactId>
          <version>3.0.0-M1</version>
          <configuration>
            <skip>true</skip>
          </configuration>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-release-plugin</artifactId>
          <version>3.0.0-M4</version>
          <configuration>
            <tagNameFormat>v@{project.version}</tagNameFormat>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

</project>
